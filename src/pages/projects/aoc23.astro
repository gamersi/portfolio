---
import ProjectLayout from '@layouts/ProjectLayout.astro';

const title = 'Advent of Code 2023';
const about = `This is a collection of my solutions to the 2023 Advent of Code.
I'm using Rust for this year's solutions. I'm trying to keep the
solutions as fast as possible with as little dependencies as
possible. I'm also trying to keep the solutions as readable as
possible.`;
const githubUrl = 'https://github.com/gamersi/adventofcode-solutions-2023';
const features = [
    'Fast',
    '(Kinda) Easy to read',
    'Tested',
    'first day to day 21 done'
];
const technologies = [
    'Rust',
    'regex'
];
---

<ProjectLayout 
    {title} 
    {about} 
    {githubUrl} 
    {features} 
    {technologies} 
/>
