---
import BlogPost from '../components/BlogPost.astro';
import Layout from '../layouts/Layout.astro';
const title = 'gamersi Blog';
const posts = await Astro.glob('./posts/*.md');
---

<Layout title={title}>
    <h1>Welcome to my Blog!</h1>
    <p>Here are my latest posts:</p>
    <div class="posts">
        {posts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title} date={post.frontmatter.pubDate} lang={post.frontmatter.lang} />)}
    </div>
</Layout>

<style>
    .posts {
        padding: 2rem;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 2rem;
    }
</style>